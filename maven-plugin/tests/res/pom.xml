<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jaxb-maven-plugin-tests-res</artifactId>
  <parent>
    <groupId>org.jvnet.jaxb</groupId>
    <artifactId>jaxb-maven-plugin-tests</artifactId>
    <version>2.0.5-SNAPSHOT</version>
  </parent>
  <packaging>jar</packaging>
  <name>JAXB Tools :: Maven Plugin :: Test [res]</name>
  <dependencies>
    <dependency>
      <groupId>org.glassfish.jaxb</groupId>
      <artifactId>jaxb-runtime</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet.jaxb</groupId>
      <artifactId>jaxb-maven-plugin-tests-po-2.3</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet.jaxb</groupId>
      <artifactId>jaxb-maven-plugin-testing</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jvnet.jaxb</groupId>
        <artifactId>jaxb-maven-plugin-tests-po-2.3</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jvnet.jaxb</groupId>
        <artifactId>jaxb-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <extension>true</extension>
							<!-- This is a problem -->
							<!--forceRegenerate>true</forceRegenerate-->
              <catalog>src/main/resources/catalog.cat</catalog>
              <schemas>
                <schema>
                  <fileset>
                    <directory>${basedir}/src/main/schemas</directory>
                    <includes>
                      <include>*.*</include>
                    </includes>
                    <excludes>
                      <exclude>*.xs</exclude>
                    </excludes>
                  </fileset>
                </schema>
                <schema>
                  <url>http://schemas.opengis.net/wms/1.3.0/exceptions_1_3_0.xsd</url>
                </schema>
                <schema>
                  <dependencyResource>
                    <groupId>org.jvnet.jaxb</groupId>
                    <artifactId>jaxb-maven-plugin-tests-po-2.3</artifactId>
										<!-- Can be defined in project dependencies or dependency management -->
										<!--version>${project.version}</version-->
                    <resource>purchaseorder.xsd</resource>
                  </dependencyResource>
                </schema>
                <schema>
                  <dependencyResource>
                    <groupId>org.jvnet.jaxb</groupId>
                    <artifactId>jaxb-maven-plugin-tests-po-scd</artifactId>
                    <version>${project.version}</version>
                    <resource>purchaseorder.xsd</resource>
                  </dependencyResource>
                </schema>
              </schemas>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
