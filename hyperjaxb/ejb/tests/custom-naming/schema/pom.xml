<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jvnet.jaxb</groupId>
		<artifactId>hyperjaxb3-ejb-tests-custom-naming</artifactId>
		<version>2.0.6-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>hyperjaxb3-ejb-tests-custom-naming-schema</artifactId>
	<packaging>jar</packaging>
	<name>JAXB Tools :: Hyperjaxb3 :: EJB :: Test [custom-naming:schema]</name>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven.shared</groupId>
			<artifactId>maven-plugin-testing-harness</artifactId>
			<version>1.1</version>
			<scope>test</scope>
		</dependency>
		<!-- Hibernate Dependencies -->
		<!-- Test -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-entitymanager</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<scope>test</scope>
		</dependency>

	</dependencies>
	<build>
		<defaultGoal>test</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb</groupId>
				<artifactId>hyperjaxb3-maven-plugin</artifactId>
				<configuration>
					<roundtripTestClassName>org.jvnet.hyperjaxb3.ejb.tests.po.RoundtripTest</roundtripTestClassName>
					<plugins>
						<!--plugin>
							<groupId>org.jvnet.jaxb</groupId>
							<artifactId>hyperjaxb3-ejb-tests-custom-naming-extension</artifactId>
							<version>${project.version}</version>
						</plugin-->
					</plugins>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.jvnet.jaxb</groupId>
						<artifactId>hyperjaxb3-ejb-tests-custom-naming-extension</artifactId>
						<version>${project.version}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
</project>
